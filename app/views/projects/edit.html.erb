<h1>Edit Project</h1>

<%= form_for :project, url: "/projects" do |f| %>

  <%= f.collection_select :client_id, Client.all, :id, :name %>

  <br>

  <%= f.hidden_field :user_id, value: session[:user_id] %>

  <%= f.label "Project Name:" %>
  <%= f.text_field :name %></br>
  <%= f.label "Deadline:" %>
  <%= f.text_field :deadline %></br>
  <%= f.label "Status:" %>
  <%= f.text_field :status %>

  <p><%= f.submit "Edit Project" %></p>
<% end %>
