<h1>Time Entries: <%= current_user.name %></h1>


<p>
<% if flash[:notice] %>
  <font color="green"><%= flash[:notice] %></font>
<% end %>
</p>

<hr>

<table>
	<tr>
		<th>Date</th>
		<th>Project</th>
		<th>Hours</th>
		<th>Notes</th>
	</tr>

	<% @entries.each do |entry| %>
		<tr>
			<td><%= entry.date.strftime("%b %d, %Y") %></strong> </td>
			<td><strong><%= link_to entry.project.name, project_path(entry.project) %></strong></td>
			<td><%= entry.calc_time(entry.start_time) %> to <%= entry.calc_time(entry.end_time) %></td>
			<td><i><%= entry.notes %></i></td>
			<td><%= link_to "delete entry", "/entries/#{entry.id}", method: :delete, class: "form_button" %></td>
		</tr>
	<% end %>
	<tr>
		<td></td><td class="table_total"><strong>Total hours worked: XYZ</strong> 
		</td><td class="table_total"></td>
	</tr>
</table>

<p>
</p>

<p>
	<%= link_to "+ Add entry", new_entry_path, class: "form_button" %>
</p>