<!DOCTYPE html>
<html>
  <head>
    <title>TimeTrackerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header-nav" role="navigation">
      <% if current_user %>
        <%= link_to "Dashboard", dashboard_path %> |
        <%= link_to "Manage Clients", clients_path %> |
        <%= link_to "Manage Projects", user_projects_path(current_user) %> | 
        <strong><%= link_to "+ TIME ENTRY", new_entry_path %></strong> |
        <%= link_to "Log Out", logout_path, method: :destroy %>
      <% else %>
        <%= link_to "Login", login_path %> | 
        <%= link_to "Sign up", signup_path %> | 
        <%=link_to "Login with Facebook", '/auth/facebook' %>
      <% end %>
    </div>

    <div class="container"  role="main">

    <%= yield %>

    </div>
  </body>
</html>
