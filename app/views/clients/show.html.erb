<h1>Client Name: <%= @client.name %></h1>

<% if flash[:notice] %>
  <font color="green"><%= flash[:notice] %></font>
<% end %>

<h3>Projects:</h3>

<% if @projects.empty? %>
  <p>Client does not have any assigned projects yet.</p>
<% else %>
	<ul>
	<% @projects.each do |project| %>
	  <li><%= link_to "#{project.name}", project_path(project) %></li>
	  <% end %>
	</ul>
<% end %>

<p>
	<%= link_to "+ Add a Project", new_client_project_path(@client) %> |
	<%= link_to "Delete Client", "/clients/#{@client.id}", method: :delete %>
</p>
